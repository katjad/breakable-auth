block content
  .ui.middle.aligned.center.aligned.grid
    .column
        h1.ui.teal.header
            .content Sign in
        form.ui.large.form(method='POST')
            .ui.segment
                .field
                a(href='/auth/github').ui.fluid.large.blue.button
                    i.github.icon
                    | Sign in with GitHub 
        div
            p &nbsp;
            p &nbsp;                  
        div 
            .ui.fluid.large.teal.button#viewItems  Check out protected content
        p
        if message
            div 
                .ui.fluid.large.red.button #{message}

block footer
    script(src="/javascripts/checkAuth.js")


